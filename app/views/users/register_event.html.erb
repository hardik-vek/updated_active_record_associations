<center>
  <h1>Register in Event</h1>

  <%if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p style = "color:red"><%= error %></p>
    <% end %>
  <% end %>
    
  <%= form_for @enrollment do |enroll| %>
  <table>
    <tr>
      <td><%= enroll.hidden_field :user_id, :readonly => true %></td>
    </tr>
    <tr>
      <td><%= enroll.label :event %></td>
      <td><%= enroll.collection_select :event_id, Event.all, :id, :name %></td>
    </tr>
    <tr>
      <td><%= enroll.submit %></td>
    </tr>

  </table>
  <% end %>
</center>
